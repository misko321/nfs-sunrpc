
# This is a template Makefile generated by rpcgen

# Parameters

CLIENT = nfs_client
SERVER = nfs_server

SOURCES_CLNT.cpp =
SOURCES_CLNT.h =
SOURCES_SVC.cpp =
SOURCES_SVC.h =
SOURCES.x = nfs.x
CXX = g++

TARGETS_SVC.cpp = nfs_svc.cpp nfs_server.cpp nfs_xdr.cpp
TARGETS_CLNT.cpp = nfs_clnt.cpp nfs_client.cpp nfs_xdr.cpp
TARGETS = nfs.h nfs_xdr.cpp nfs_clnt.cpp nfs_svc.cpp nfs_client.cpp nfs_server.cpp

OBJECTS_CLNT = $(SOURCES_CLNT.cpp:%.cpp=%.o) $(TARGETS_CLNT.cpp:%.cpp=%.o)
OBJECTS_SVC = $(SOURCES_SVC.cpp:%.cpp=%.o) $(TARGETS_SVC.cpp:%.cpp=%.o)
# Compiler flags

CXXFLAGS += -g -Wall -std=c++11
LDLIBS += -lnsl
RPCGENFLAGS =

# Targets

all : $(CLIENT) $(SERVER)

# $(TARGETS) : $(SOURCES.x)
# 	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

$(OBJECTS_CLNT) : $(SOURCES_CLNT.cpp) $(SOURCES_CLNT.h) $(TARGETS_CLNT.cpp)

$(OBJECTS_SVC) : $(SOURCES_SVC.cpp) $(SOURCES_SVC.h) $(TARGETS_SVC.cpp)

$(CLIENT) : $(OBJECTS_CLNT)
	$(LINK.cpp) -o $(CLIENT) $(OBJECTS_CLNT) $(LDLIBS)

$(SERVER) : $(OBJECTS_SVC)
	$(LINK.cpp) -o $(SERVER) $(OBJECTS_SVC) $(LDLIBS)

clean:
	$(RM) core $(OBJECTS_CLNT) $(OBJECTS_SVC) $(CLIENT) $(SERVER)

clean_all:
	$(RM) core $(TARGETS) $(OBJECTS_CLNT) $(OBJECTS_SVC) $(CLIENT) $(SERVER) Makefile.nfs
